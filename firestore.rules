rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // ---------- Helpers ----------
    function isSignedIn() {
      return request.auth != null;
    }

    // Admins get a custom claim: { admin: true }
    function isAdmin() {
      return isSignedIn() && request.auth.token.admin == true;
    }

    // You already check for coordinators on the client,
    // so letâ€™s make them "staff" in the rules too.
    function isCoordinator() {
      return isSignedIn() && request.auth.token.coordinator == true;
    }

    function isStaff() {
      return isAdmin() || isCoordinator();
    }

    // ---------- USERS (profile/role docs) ----------
    // This MUST be inside /databases/{database}/documents
    match /users/{userId} {

      // create their own doc (what your ensureUserProfile does)
      allow create: if isSignedIn() && request.auth.uid == userId;

      // read/update their own doc, or staff can manage
      // Users can update their own blogPosts array when creating posts
      allow read, update: if
        (isSignedIn() && request.auth.uid == userId) ||
        isStaff();

      // delete only admins
      allow delete: if isAdmin();
    }

    // ---------- BLOG (public read, admin write) ----------
    match /blog/{postId} {
      allow read: if true;
      allow create, update, delete: if isAdmin();

      // optional shape checks
      allow create: if isAdmin() &&
        request.resource.data.keys().hasAny(
          ['title', 'slug', 'content', 'published', 'publishedAt']
        );
    }

    // ---------- POSTS (blog posts - public read, staff write) ----------
    match /posts/{postId} {
      allow read: if true;
      allow create, update, delete: if isStaff();
    }

    // ---------- CATEGORIES (public read, authenticated write) ----------
    match /categories/{categoryId} {
      allow read: if true;
      allow create, update, delete: if isSignedIn();
    }

    // ---------- EVENTS (public read, admin write) ----------
    match /events/{eventId} {
      allow read: if true;
      allow create, update, delete: if isAdmin();

      match /registrations/{regId} {
        // you said "require sign-in (anonymous is fine)"
        // so this is good:
        allow create: if isSignedIn();

        // people can see their own registrations, admins see all
        allow read: if isAdmin() || (isSignedIn() && resource.data.userId == request.auth.uid);
        allow update, delete: if isAdmin();
      }
    }

    // ---------- FORMS ----------
    match /forms/{formId} {
      allow read: if true;
      allow create, update, delete: if isAdmin();

      match /submissions/{submissionId} {
        // require sign-in to submit
        allow create: if isSignedIn();

        // read own, or admin
        allow read: if isAdmin() || (isSignedIn() && resource.data.submittedBy == request.auth.uid);

        // only admin can change/delete
        allow update, delete: if isAdmin();
      }
    }

    // ---------- CONTACTS (public inbox) ----------
    match /contacts/{messageId} {
      allow create: if true;
      allow read, update, delete: if isAdmin();
    }

    // ---------- Catch-all deny ----------
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
