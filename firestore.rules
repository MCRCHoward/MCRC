rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // ---------- Helpers ----------
    function isSignedIn() {
      return request.auth != null;
    }

    // Admins get a custom claim: { admin: true }
    function isAdmin() {
      return isSignedIn() && request.auth.token.admin == true;
    }

    // You already check for coordinators on the client,
    // so letâ€™s make them "staff" in the rules too.
    function isCoordinator() {
      return isSignedIn() && request.auth.token.coordinator == true;
    }

    function isStaff() {
      return isAdmin() || isCoordinator();
    }

    // ---------- USERS (profile/role docs) ----------
    // This MUST be inside /databases/{database}/documents
    match /users/{userId} {

      // create their own doc (what your ensureUserProfile does)
      allow create: if isSignedIn() && request.auth.uid == userId;

      // read/update their own doc, or staff can manage
      // Users can update their own blogPosts array when creating posts
      allow read, update: if
        (isSignedIn() && request.auth.uid == userId) ||
        isStaff();

      // delete only admins
      allow delete: if isAdmin();

      match /tasks/{taskId} {
        allow read, update: if isSignedIn() && request.auth.uid == userId;
        allow create, delete: if false;
      }

      match /activity/{activityId} {
        allow read: if isSignedIn() && request.auth.uid == userId;
        allow update: if isSignedIn() &&
          request.auth.uid == userId &&
          request.resource.data.read == true &&
          resource.data.read == false;
        allow create, delete: if false;
      }
    }

    // ---------- BLOG (public read, admin write) ----------
    match /blog/{postId} {
      allow read: if true;
      allow create, update, delete: if isAdmin();

      // optional shape checks
      allow create: if isAdmin() &&
        request.resource.data.keys().hasAny(
          ['title', 'slug', 'content', 'published', 'publishedAt']
        );
    }

    // ---------- POSTS (blog posts - public read, staff write) ----------
    match /posts/{postId} {
      allow read: if true;
      allow create, update, delete: if isStaff();
    }

    // ---------- CATEGORIES (public read, authenticated write) ----------
    match /categories/{categoryId} {
      allow read: if true;
      allow create, update, delete: if isSignedIn();
    }

    // ---------- EVENTS (public read, admin write) ----------
    match /events/{eventId} {
      allow read: if true;
      allow create, update, delete: if isAdmin();
    }

    // ---------- EVENT REGISTRATIONS (root-level collection) ----------
    match /eventRegistrations/{regId} {
      // Users can only create registrations for themselves
      allow create: if isSignedIn() && 
                       request.resource.data.userId == request.auth.uid;
      
      // Users can read/update their own registrations
      allow read, update: if isSignedIn() && 
                             resource.data.userId == request.auth.uid;
      
      // Admins can read/list all registrations
      allow read, list: if isAdmin();
      
      // Only admins can delete registrations
      allow delete: if isAdmin();
    }

    // ---------- FORMS ----------
    match /forms/{formId} {
      allow read: if true;
      allow create, update, delete: if isAdmin();

      match /submissions/{submissionId} {
        // require sign-in to submit
        allow create: if isSignedIn();

        // read own, or admin
        allow read: if isAdmin() || (isSignedIn() && resource.data.submittedBy == request.auth.uid);

        // only admin can change/delete
        allow update, delete: if isAdmin();
      }
    }

    // ---------- CONTACTS (public inbox) ----------
    match /contacts/{messageId} {
      allow create: if true;
      allow read, update, delete: if isAdmin();
    }

    // ---------- DONATIONS (admin-only access) ----------
    // All writes go through Admin SDK server actions (bypasses Firestore rules)
    // Only staff (admin/coordinator) can read donations for CMS dashboard
    match /donations/{donationId} {
      // Staff can read donations for CMS dashboard
      allow read: if isStaff();
      
      // All writes (create, update, delete) are disabled for client-side access
      // All donation creation/updates must go through Admin SDK server actions
      allow create, update, delete: if false;
    }

    // ---------- ROADMAP ITEMS (admin-only) ----------
    match /roadmapItems/{itemId} {
      // Public read for viewing roadmap
      allow read: if true;
      
      // Only admins can create, update, delete
      // All writes go through Admin SDK server actions (bypasses Firestore rules)
      allow create, update, delete: if false;
    }

    // ---------- RECOMMENDATIONS ----------
    match /recommendations/{recId} {
      // Authenticated users can read all recommendations
      allow read: if isSignedIn();
      
      // Authenticated users can create recommendations
      allow create: if isSignedIn() && 
                       request.resource.data.submittedBy == request.auth.uid;
      
      // Only admins can update/delete
      // All writes go through Admin SDK server actions (bypasses Firestore rules)
      allow update, delete: if false;
    }

    // ---------- SERVICE AREAS (Mediation, Facilitation, Restorative Practices) ----------
    match /serviceAreas/{serviceArea} {
      // Service area documents are metadata only, staff can read
      allow read: if isStaff();
      allow create, update, delete: if false; // Managed via Admin SDK only

      // Inquiries subcollection
      match /inquiries/{inquiryId} {
        // Authenticated users can create inquiries (form submissions)
        allow create: if isSignedIn() &&
          request.resource.data.submittedBy == request.auth.uid &&
          request.resource.data.serviceArea == serviceArea &&
          request.resource.data.status == 'submitted';

        // Users can read their own inquiries, staff can read all
        allow read: if isSignedIn() && (
          resource.data.submittedBy == request.auth.uid ||
          isStaff()
        );

        // Staff can update inquiries (mark as reviewed, update status)
        allow update: if isStaff() &&
          request.resource.data.serviceArea == serviceArea;

        // Only admins can delete inquiries
        allow delete: if isAdmin();
      }

      // Future subcollections (participants, sessions, etc.)
      match /participants/{participantId} {
        allow read, write: if isStaff();
      }

      match /sessions/{sessionId} {
        allow read, write: if isStaff();
      }
    }

    // ---------- PARTICIPANTS (staff-only access) ----------
    match /participants/{participantId} {
      // Staff can read participants for CMS dashboard
      allow read: if isStaff();
      
      // All writes go through Admin SDK server actions (bypasses Firestore rules)
      // Client-side writes are disabled for security
      allow create, update, delete: if false;
    }

    // ---------- PAPER INTAKES (staff-only access) ----------
    // Stores digitized paper mediation intake forms with Insightly sync status.
    // All writes go through Admin SDK server actions (bypasses Firestore rules).
    match /paperIntakes/{intakeId} {
      // Staff can read paper intakes for CMS dashboard and history table
      allow read: if isStaff();
      
      // All writes (create, update, delete) are disabled for client-side access
      // All paper intake operations must go through Admin SDK server actions
      // This matches the pattern used for donations, participants, etc.
      allow create, update, delete: if false;
    }

    // ---------- Catch-all deny ----------
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
